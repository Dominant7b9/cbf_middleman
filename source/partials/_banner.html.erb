<div class="section-1 mb-5 img-fluid"
    style="background-image: linear-gradient(to left, transparent, rgba(0, 0, 0, 0), rgba(21, 22, 31, 0.55)), url(<%=image%>);">
  <div class="container-fluid mt-0">
    <div class="row ml-4">
      <div class="col-md-5 main-text">
        <h1 class="text-left">
          <% if title.is_a? String %>
            <%=title%>
          <% else %>
            <%= title.join('<br>') %>
          <% end %>
        </h1>
        <p class="small-text-bold text-left"><%=text%></p>
      </div>
    </div>
  </div>
</div>
