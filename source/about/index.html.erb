<%=partial "partials/banner-about", locals: data.about.banner_content%>

<div class="container pt-1">
  <div class="row row-cols-1 row-cols-md-3 mt-5 mb-5">
    <div class="col">
      <div class="card about-card h-100">
        <div class="card-body">
          <h5 class="card-title"><a class="card-link" href="#">Our Vision</a></h5>
          <p class="card-text">Additional text here?</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card about-card h-100">
        <div class="card-body">
          <h5 class="card-title"><a class="card-link" href="#">Our Values</a></h5>
          <p class="card-text">Additional text here?</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card about-card h-100">
        <div class="card-body">
          <h5 class="card-title"><a class="card-link" href="#">Our Process</a></h5>
          <p class="card-text">Additional text here?</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container about-content mb-5">
  <div class="row justify-content-center">
    <div class="pt-3 mb-4 border-bottom">
      <h1><%=data.about.info_content.title%></h1>
    </div>
  </div>
  <div class="pt-1 pb-3">
    <p class="mb-5"><%=data.about.info_content.text%></p>
  </div>
</div>

<div class="container">
  <div class="row video-container mt-5 mb-5 bg-vid">
    <div class="col-12 pt-5 pb-5">
      <img src="https://www.cbfplus.com/images/video01.jpg" class="img-fluid" alt="Responsive image">
    </div>
  </div>
</div>

<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="mb-3 border-bottom">
      <h1><%=data.about.team_content.title%></h1>
    </div>
  </div>
  <p class="mb-5"><%=data.about.team_content.text%></p>
  <% 5.times do %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
    <% data.about.team_members.each do |member| %>
    <div class="col-sm mb-5">
      <a tabindex="0" role="img" data-toggle="popover" data-trigger="hover" title="About <%=member.first_name%>" data-content="<%=member.about%>"><img src="<%=member.image%>" class="rounded-lg"></a>
      <h5 class="mt-3"><%=member.full_name%></h5>
    </div>
    <%end%>
  </div>
  <%end%>
</div>

<%=partial "partials/industries"%>